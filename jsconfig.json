{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@root/hooks": [
                "hooks/index",
            ],
            "@root/queries": [
                "queries/index"
            ],
            "@root/utils": [
                "utils/index"
            ],
            "@root/components/*": [
                "components/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@root/sass/*": [
                "sass/*"
            ]
        }
    },
    "target": "es6",
    "module": "es6"
}